*/5 * * * * cd /opt/chopper && node src/heartbeat.js --once >> logs/heartbeat.log 2>&1
0 * * * * cd /opt/chopper && bash Alex-Scripts/system-scan.sh >> logs/system-scan.log 2>&1
0 6 * * * cd /opt/chopper && python3 Alex-Scripts/daily-summary.py >> logs/daily-summary.log 2>&1
